<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_for :user, url: login_path, method: :post do |f| %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: " mt-2 btn btn-primary" %>
    <% end %>

  </div>
</div>
