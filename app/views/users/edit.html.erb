<h1>Edit your profile</h1>

<%= form_for @user do |f| %>

  <div class="name">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <% if @user.errors[:name].present? %>
      <% @user.errors[:name].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>

  </div>
  <div class="gender">
    <%= f.label :gender %>
    <%= f.select :gender, [%w[Male male], %w[Female female], %w[Other other]], {}, { class: "form-control" } %>
    <% if @user.errors[:gender].present? %>
      <% @user.errors[:gender].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="sexuality">
    <%= f.label :sexuality %>
    <%= f.select :sexuality, [%w[Heterosexual heterosexual], %w[Homosexual homosexual], %w[Other other]], {}, class: "form-control" %>
    <% if @user.errors[:sexuality].present? %>
      <% @user.errors[:sexuality].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="birthday">
    <%= f.label :birthday %>
    <%= f.date_field :birthday, value: Date.today, class: "form-control" %>
    <% if @user.errors[:birthday].present? %>
      <% @user.errors[:birthday].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="location">
    <%= f.label :location %>
    <%= f.select :location, [%w[AK ak], %w[AL al], %w[AR ar], %w[AS as], %w[AZ az], %w[CA ca], %w[CO co], %w[CT ct], %w[DC dc], %w[DE de], %w[FL fl], %w[GA ga], %w[GU gu], %w[HI hi], %w[IA ia], %w[ID id], %w[IL il], %w[IN in], %w[KS ks], %w[KY ky], %w[LA la], %w[MA ma], %w[MD md], %w[ME me], %w[MI mi], %w[MN mn], %w[MO mo], %w[MP mp], %w[MS ms], %w[MT mt], %w[NC nc], %w[ND nd], %w[NE ne], %w[NH nh], %w[NJ nj], %w[NM nm], %w[NV nv], %w[NY ny], %w[OH oh], %w[OK ok], %w[OR or], %w[PA pa], %w[PR pr], %w[RI ri], %w[SC sc], %w[SD sd], %w[TN tn], %w[TX tx], %w[UM um], %w[UT ut], %w[VA va], %w[VI vi], %w[VT vt], %w[WA wa], %w[WI wi], %w[WV wv], %w[WY wy]], {}, class: "form-control" %>
    <% if @user.errors[:location].present? %>
      <% @user.errors[:location].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="education">
    <%= f.label :education %>
    <%= f.select :education, ["High School", 'Undergradute', 'Master','PhD'], {}, class:"form-control"%>
    <% if @user.errors[:education].present? %>
      <% @user.errors[:education].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class = "career">
    <%= f.label :career, "Career" %>
    <%= f.text_field :career, class: "form-control" %>
    <% if @user.errors[:career].present? %>
      <% @user.errors[:career].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class="height">
    <%= f.label :height %>
    <%= f.text_field :height, class: "form-control" %>
    <% if @user.errors[:height].present? %>
      <% @user.errors[:height].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div class = "profile_photo">
    <%= f.label :profile_photo, "Profile Photo URL" %>
    <%= f.text_field :profile_photo, class: "form-control" %>
    <% if @user.errors[:profile_photo].present? %>
      <% @user.errors[:profile_photo].each do |msg| %>
        <p style="color:red"><%= msg %></p>
      <% end %>
    <% end %>
  </div>
  <h3>Interests</h3>
  <hr/>
  <div class = "profile_photo">
  <%= f.fields_for :interest do |ff| %>
    <% ff.hidden_field :uid %>
    <% [:interest1, :interest2, :interest3].each do |field_name| %>
      <div class="profile_interest">
        <%= ff.label field_name %>
        <%= ff.text_field field_name, class: "form-control" %>
        <% if @user.errors[field_name].present? %>
          <% @user.errors[field_name].each do |msg| %>
            <p style="color:red"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
        <br/>
    <% end %>
  <% end %>



  </div>

  <div class="profile_photo">
<h3>Prompts</h3>
    <hr/>
  <%= f.fields_for :prompt do |ff| %>
    <% ff.hidden_field :uid %>
    <% [[:answer1, "What's most important to you?"], [:answer2, "What's your favorite food?"], [:answer3, "If you can work anywhere, where do you want to work?"]].each do |(field_name, field_label)| %>
      <div class="profile_prompt">
        <%= ff.label field_label %>
        <%= ff.text_field field_name, class: "form-control" %>
        <% if @user.errors[field_name].present? %>
          <% @user.errors[field_name].each do |msg| %>
            <p style="color:red"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
        <br/>
    <% end %>

  <% end %>
  </div>

  <br>

  <%= submit_tag "Submit" ,class:"btn btn-primary" %>
<% end %>
