
<div class="d-flex  justify-content-center align-items-center" style="height:500px">
  <div class=" card  bg-light  " style="width:50%">
    <div class="card-header"><h1 class="text-center ">Signup</h1></div>
    <div class="card-body">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "form-control" %>
          <% if @user.errors[:phone].present? %>
            <% @user.errors[:phone].each do |msg| %>
              <p style="color:red"><%= msg %></p>
            <% end %>
          <% end %>
        </div>
        <div class=" form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
          <% if @user.errors[:password].present? %>
            <% @user.errors[:password].each do |msg| %>
              <p style="color:red"><%= msg %></p>
            <% end %>
          <% end %>
        </div>

        <%= submit_tag "Sign Up", class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  </div>
</div>
